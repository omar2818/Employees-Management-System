@model ForgetPasswordViewModel

@{
    ViewData["Title"] = "Forget Password";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<h1>ForgetPassword</h1>
<div class="main-agileinfo">
    <div class="agileits-top">
        <div asp-validation-summary="ModelOnly"></div>
        
        <form asp-action="SendSMS">
            <input class="text email" asp-for="Email"/>
            <input type="submit" value="Send SMS"/>
        </form>
        <form asp-action="SendResetPasswordEmail">
            <input class="text email" asp-for="Email"/>
            <input type="submit" value="Send Email" />
        </form>
        <form asp-action="SendResetPasswordEmailUsingMailKit">
            <input class="text email" asp-for="Email" />
            <input type="submit" value="Send Email Using MailKit" />
        </form>
    </div>

</div>
