@model Department

@{
    ViewData["Title"] = "Delete Department";
}

<h1>Are You Sure To Delete This Department</h1>

<form asp-action="Delete">

    <div class="form-group">
        <label class="col-form-label" asp-for="Code">Code</label>
        <input asp-for="Code" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label class="col-form-label" asp-for="Name">Name</label>
        <input asp-for="Name" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label class="col-form-label" asp-for="DateOfCreation">Date of Creation</label>
        <input asp-for="DateOfCreation" class="form-control" readonly />
    </div>

    <input type="submit" value="Delete" class="btn btn-danger" /> |
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>

</form>
