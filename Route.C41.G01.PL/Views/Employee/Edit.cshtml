@model EmployeeViewModel

@{
    ViewData["Title"] = "Edit Employee";
}

<h1>Edit Employee</h1>

<div>
    <img src="~/Files/Images/@Model.ImageName" width="75" class="img-fluid rounded-circle" alt="Employee Image" />
</div>

<form asp-action="Edit" method="post" enctype="multipart/form-data">

    <div asp-validation-summary="All" class="text-danger"></div>

    <partial name="PartialViews/CreateEditEmployeePartial" />
    
    <input type="submit" value="Save" class="btn btn-primary" /> |
    <a asp-controller="Employee" asp-action="Index" class="btn btn-light">Cancel</a>
</form>

@section ValidationScriptsSection {
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
}

