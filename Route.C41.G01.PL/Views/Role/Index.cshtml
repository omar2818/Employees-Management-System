@model IEnumerable<RoleViewModel>


@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>All Roles</h1>
<br />
<br />

<form asp-action="Index" class="m-5">
    <div class="row">
        <div class="col-8">
            <input name="searchInput" id="searchInput" type="text" placeholder="Search..." class="form-control" />
        </div>
        <div class="col-4">
            <input type="submit" class="btn btn-success" />
        </div>

    </div>
</form>

<a asp-action="Create" class="btn btn-primary">Create Employee</a>
<br />
<br />


@if (Model.Count() > 0)
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(D => D.Id)</th>
                <th>@Html.DisplayNameFor(D => D.RoleName)</th>

                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.Id</td>
                    <td>@user.RoleName</td>
                    <partial name="_ButtonsPartialView" model="@user.Id" />
                </tr>
            }

        </tbody>
    </table>

}
else
{
    <div class="mt-4 alert alert-warning">
        <h4>There is No Roles :(</h4>
    </div>
}



