@model EmployeeViewModel

@inject IUnitOfWork _unitOfWork

@{
    var departments = new SelectList(_unitOfWork.Repository<Department>().GetAll(), nameof(Department.Id), nameof(Department.Name));
}

<div class="form-group">
    <label class="col-form-label" asp-for="Name">Name</label>
    <input asp-for="Name" class="form-control" />
    <span asp-validation-for="Name" class="text-danger"></span>
</div>
<div class="form-group">
    <label class="col-form-label" asp-for="Email">Email</label>
    <input asp-for="Email" class="form-control" />
    <span asp-validation-for="Email" class="text-danger"></span>
</div>
<div class="form-group">
    <label class="col-form-label" asp-for="Address">Address</label>
    <input asp-for="Address" class="form-control" />
    <span asp-validation-for="Address" class="text-danger"></span>
</div>
<div class="form-group">
    <label class="col-form-label" asp-for="Age">Age</label>
    <input asp-for="Age" class="form-control" />
    <span asp-validation-for="Age" class="text-danger"></span>
</div>
<div class="form-group">
    <label class="col-form-label" asp-for="Salary">Salary</label>
    <input asp-for="Salary" class="form-control" />
    <span asp-validation-for="Salary" class="text-danger"></span>
</div>
<div class="form-group">
    <label class="col-form-label" asp-for="Gender">Gender</label>
    @* <input asp-for="Gender" class="form-control" /> *@
    @* @Html.DropDownListFor(model => model.Gender,
    new SelectList(Enum.GetValues(typeof(Gender)))) *@
    @foreach (var value in Enum.GetValues(typeof(Gender)))
    {
        <label>
            @Html.RadioButtonFor(model => model.Gender, value)
            @value.ToString()
        </label>
    }
    <span asp-validation-for="Gender" class="text-danger"></span>
</div>
<div class="form-group">
    <input asp-for="IsActive" class="form-check-input" />
    <label class="col-form-label" asp-for="IsActive">Is Active</label>
</div>
<div class="form-group">
    <label class="col-form-label" asp-for="HiringDate">Hiring Date</label>
    <input asp-for="HiringDate" class="form-control" />
</div>
<div class="form-group">
    <label class="col-form-label" asp-for="Department"></label>
    <select class="form-control" asp-for="DepartmentId" asp-items="@departments">
        <option value="@null"> -- Select Department -- </option>
    </select>

</div>
<div class="form-group">
    <label class="col-form-label">Image</label>
    <input />
</div>